<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="editTextColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="searchViewStyle">@style/SearchViewStyleMyApp</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>

    </style>

    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dialog_title</item>
        <item name="fontPath">@string/font_regular</item>
    </style>

    <style name="DialogTransparentBackgroundTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SearchViewStyleMyApp" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/colorPrimary</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="searchHintIcon">@null</item>
        <item name="android:textColorHint">@color/white_50_alpha</item>
        <item name="fontPath">@string/font_medium</item>
    </style>


    <style name="BaseButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sign_int_edit_text_size</item>
    </style>

    <style name="OrangeButton" parent="BaseButton">
        <item name="fontPath">@string/font_bold</item>
        <item name="android:background">@drawable/orange_button</item>
        <item name="android:layout_marginLeft">-10dp</item>
        <item name="android:layout_marginRight">-10dp</item>
    </style>


    <style name="FacebookButton" parent="OrangeButton">
        <item name="android:drawableLeft">@drawable/ic_facebook_logo</item>
        <item name="android:text">@string/connect_with_facebook</item>
        <item name="android:background">@drawable/facebook_button</item>
    </style>


    <style name="TransparentButton" parent="BaseButton">
        <item name="android:textColor">@color/transparent_btn_color_selector</item>
        <item name="android:background">@null</item>
    </style>

    <style name="SignInEditText" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sign_int_edit_text_size</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="fontPath">@string/font_light</item>
    </style>

    <style name="ListItemGrayText">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">@dimen/list_item_msg_text_size</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">19sp</item>
        <item name="titleTextColor">@color/white</item>
        <item name="fontPath">@string/font_medium</item>
    </style>

    <style name="DialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="titleTextColor">@color/dialog_title</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="RestaurantGrayTitle">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">@dimen/review_text_size</item>
    </style>

    <style name="RestaurantBlackTitle">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/review_text_size_big</item>
        <item name="android:textColorLink">@color/black_text</item>
    </style>

</resources>
