{
  "services": {
    "mdb1": {
      "type": "mongodb",
      "config": {
        "ssl": false,
        "uri": "mongodb://localhost:27017"
      },
      "rules": {
        "5888d4c3772e2e4a41158d64": {
          "_id": "5888d4c3772e2e4a41158d64",
          "namespace": "todo.items",
          "write": {
            "$or": [
              {
                "$$oldRoot.user": "$$auth.id"
              },
              {
                "$$oldRoot": {
                  "$exists": 0
                }
              }
            ]
          },
          "read": {
            "$$root.user": "$$auth.id"
          },
          "fields": {
            "_id": {},
            "checked": {
              "valid": {
                "$$new": {
                  "$type": "bool"
                }
              }
            },
            "text": {
              "valid": {
                "$$new": {
                  "$ne": ""
                }
              }
            },
            "user": {
              "valid": "$$auth.id"
            }
          }
        },
        "5888d4c3772e2e4a41158d6b": {
          "_id": "5888d4c3772e2e4a41158d6b",
          "namespace": "todo.users",
          "write": {
            "$or": [
              {
                "$$oldRoot.id": "$$auth.id"
              },
              {
                "$$oldRoot": {
                  "$exists": 0
                }
              }
            ]
          },
          "read": {
            "$$root._id": "$$auth.id"
          },
          "fields": {
            "_id": {
              "valid": "$$auth.id"
            },
            "number_status": {
              "valid": {
                "$$new": {
                  "$in": [
                    "pending",
                    "unverified",
                    "verified"
                  ]
                }
              }
            },
            "phone_number": {
              "valid": {
                "$or": [
                  {
                    "$$newRoot.number_status": "unverified",
                    "$$new": {
                      "$eq": ""
                    }
                  },
                  {
                    "$$newRoot.number_status": {
                      "$in": [
                        "pending",
                        "verified"
                      ]
                    },
                    "$$new": {
                      "$ne": ""
                    }
                  }
                ],
                "$$new": {
                  "$type": "string"
                }
              }
            },
            "verify_code": {
              "valid": {
                "$$newRoot.number_status": {
                  "$in": [
                    "pending",
                    "verified"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "tw1": {
      "type": "twilio",
      "config": {
        "auth_token": "AUTH_TOKEN",
        "sid": "SID"
      },
      "rules": {
        "5888d4c3772e2e4a41158d5d": {
          "_id": "5888d4c3772e2e4a41158d5d",
          "actions": [
            "send"
          ]
        }
      }
    }
  },
  "authProviders": {
    "oauth2/facebook": {
      "clientId": "APP-ID",
      "clientSecret": "APP-SECRET",
      "metadataFields": [
        "name",
        "email"
      ],
      "redirectURIs": [
        "http://localhost:8001/"
      ]
    },
    "oauth2/google": {
      "clientId": "APP-ID",
      "clientSecret": "APP-SECRET",
      "metadataFields": [
        "name",
        "email"
      ],
      "redirectURIs": [
        "http://localhost:8001/"
      ]
    }
  },
  "variables": {
    "ourNumber": {
      "type": "literal",
      "source": "+12013992736",
      "private": false
    }
  }
}
