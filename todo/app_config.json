{
	"_id" : ObjectId("57a3a034a582c2a631013acf"),
	"name" : "todo_app",
	"domainId" : ObjectId("5798ce26772e2e205627c273"),
	"services" : {
		"mdb1" : {
			"type" : "mongodb",
			"config" : {
				"uri" : "mongodb://localhost:27017"
			},
			"rules": [
				{
					"namespace": "todo/items",
					"index": 0,
					"actions": ["find", "update", "insert", "delete", "aggregate"],
					"fields": {
						"mutable": ["text", "user"]
					},
					"filter": {
						"user": "$var.$auth.id"
					},
					"validate": {
						"user": "$var.$auth.id"	
					}
				},
				{
					"namespace": "todo/items",
					"index": 1,
					"name": "checked",
					"actions": ["update"],
					"fields": {
						"mutable": ["checked"]
					},
					"filter": {
						"user": "$var.$auth.id"
					}
				}
			]
		}
	},
	"authProviders" : {
		"oauth2/google" : {
			"clientId" : "CLIENT-ID",
			"clientSecret" : "CLIENT-SECRET"
		},
		"oauth2/facebook" : {
			"clientId" : "CLIENT-ID",
			"clientSecret" : "CLIENT-SECRET"
		}
	}
}