{
  "authProviders": {
    "oauth2/facebook": {
      "clientId": "APP-ID",
      "clientSecret": "APP-SECRET",
      "metadataFields": [
        "name",
        "email"
      ],
      "redirectURIs": [
        "http://localhost:8001/"
      ]
    },
    "oauth2/google": {
      "clientId": "APP-ID",
      "clientSecret": "APP-SECRET",
      "metadataFields": [
        "name",
        "email"
      ],
      "redirectURIs": [
        "http://localhost:8001/"
      ]
    }
  },
  "services": {
    "mdb1": {
      "config": {
        "ssl": false,
        "uri": "mongodb://localhost:27017"
      },
      "rules": {
        "5888d4c3772e2e4a41158d64": {
          "_id": "5888d4c3772e2e4a41158d64",
          "fields": {
            "_id": {},
            "checked": {
              "valid": {
                "$$new": {
                  "$type": "bool"
                }
              }
            },
            "text": {
              "valid": {
                "$$new": {
                  "$ne": ""
                }
              }
            },
            "user": {
              "valid": "$$auth.id"
            }
          },
          "namespace": "todo.items",
          "read": {
            "$$root.user": "$$auth.id"
          },
          "write": {
            "$or": [
              {
                "$$oldRoot.user": "$$auth.id"
              },
              {
                "$$oldRoot": {
                  "$exists": 0
                }
              }
            ]
          }
        },
        "5888d4c3772e2e4a41158d6b": {
          "_id": "5888d4c3772e2e4a41158d6b",
          "fields": {
            "_id": {
              "valid": "$$auth.id"
            },
            "number_status": {
              "valid": {
                "$$new": {
                  "$in": [
                    "pending",
                    "unverified",
                    "verified"
                  ]
                }
              }
            },
            "phone_number": {
              "valid": {
                "$$new": {
                  "$type": "string"
                },
                "$or": [
                  {
                    "$$new": {
                      "$eq": ""
                    },
                    "$$newRoot.number_status": "unverified"
                  },
                  {
                    "$$new": {
                      "$ne": ""
                    },
                    "$$newRoot.number_status": {
                      "$in": [
                        "pending",
                        "verified"
                      ]
                    }
                  }
                ]
              }
            },
            "verify_code": {
              "valid": {
                "$$newRoot.number_status": {
                  "$in": [
                    "pending",
                    "verified"
                  ]
                }
              }
            }
          },
          "namespace": "todo.users",
          "read": {
            "$$root._id": "$$auth.id"
          },
          "write": {
            "$or": [
              {
                "$$oldRoot.id": "$$auth.id"
              },
              {
                "$$oldRoot": {
                  "$exists": 0
                }
              }
            ]
          }
        }
      },
      "type": "mongodb"
    },
    "tw1": {
      "config": {
        "auth_token": "AUTH_TOKEN",
        "sid": "SID"
      },
      "rules": {
        "5888d4c3772e2e4a41158d5d": {
          "_id": "5888d4c3772e2e4a41158d5d",
          "actions": [
            "send"
          ]
        }
      },
      "triggers": {
        "5888d4c3772e2e4a41158d5f": {
          "_id": "5888d4c3772e2e4a41158d5f",
          "pipeline": [
            {
              "action": "expr",
              "args": {
                "expression": {
                  "text": "$$trigger.Body",
                  "user": "$$var.idFromPhone._id"
                }
              }
            },
            {
              "action": "insert",
              "args": {
                "collection": "items",
                "database": "todo"
              },
              "service": "mdb1"
            }
          ],
          "output": "array"
        }
      },
      "type": "twilio"
    }
  },
  "variables": {
    "idFromPhone": {
      "source": {
        "output": "singleDoc",
        "pipeline": [
          {
            "action": "find",
            "args": {
              "collection": "users",
              "database": "todo",
              "query": {
                "phone_number": "$$trigger.From"
              }
            },
            "service": "mdb1"
          }
        ]
      },
      "type": "pipeline"
    },
    "ourNumber": {
      "private": false,
      "source": "+12013992736",
      "type": "literal"
    }
  }
}