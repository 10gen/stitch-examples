{
	"authProviders": {
		"oauth2/google": {
			"metadataFields": ["email", "name"],
			"clientId": "APP-ID",
			"clientSecret": "APP-SECRET"
		},
		"oauth2/facebook": {
			"metadataFields": ["email", "name"],
			"clientId": "APP-ID",
			"clientSecret": "APP-SECRET"
		}
	},

	"services": {
		"mdb1": {
			"type": "mongodb",
			"config": {
				"uri": "mongodb://localhost:27017"
			},
			"rules": [
				{
					"namespace": "todo.items",
					"visible": {"$$root.user": "$$auth.id"},
					"validate": {"$or": [{"$$newRoot.user": "$$auth.id"}, {"$$newRoot": {"$exists": 0}}]},
					"change": {"$or": [{"$$newRoot.user": "$$auth.id"}, {"$$newRoot": {"$exists": 0}}]},
					"fields": {
						"_id": {
							
						},
						"text": {
							"validate": {"$and": [{"$$new": {"$type": "string"}}, {"$$new": {"$ne": ""}}]}
						},
						"user": {},
						"checked": {
							"validate": {"$$new": {"$type": "bool"}}
						}
					}
				},
				{
					"namespace": "todo.users",
					"visible": {"$$root._id": "$$auth.id"},
					"validate": {"$$new._id": "$$auth.id"},
					"change": {"$$new._id": "$$auth.id"},
					"fields": {
						"_id": {
							
						},
						"phone_number": {
							"validate": {
								"$$new": {"$type": "string"},
								"$or": [
									{"$$new": {"$eq": ""}, "$$newRoot.number_status": "unverified"},
									{"$$new": {"$ne": ""}, "$$newRoot.number_status": {"$in": ["pending", "verified"]}}
								]
							}
						},
						"number_status": {
							"validate": { "$$new": {"$in": ["pending", "unverified", "verified"]}}
						},
						"verify_code": {
							"validate": {"$$newRoot.number_status": {"$in": ["pending", "verified"]}}
						}
					}
				}
			]
		},

		"tw1": {
			"type": "twilio",
			"config": {
				"auth_token": "AUTH_TOKEN",
				"sid": "SID"
			},
			"rules": [
				{
					"priority": 0,
					"actions": ["send"]
				}
			],
			"triggers": [
				{
					"pipeline": [
						{
							"action": "expr",
							"args": {
								"expression": {
									"user": "$$var.id_from_phone._id",
									"text": "$$trigger.Body"
								}
							}
						},
						{
							"service": "mdb1",
							"action": "insert",
							"args": {"database": "todo", "collection": "items"}
						}
					],

					"variables": {
						"id_from_phone": {
							"type": "pipeline",
							"source": {
								"pipeline": [
									{
										"service": "mdb1",
										"action": "find",
										"args": {
											"database": "todo",
											"collection": "users", 
											"query": {"phone_number": "$$trigger.From"}
										}
									}
								],
								"output": "singleDoc"
							}
						}
					}
				}
			]
		}
	},

	"variables": {
		"ourNumber": {
			"type": "literal",
			"source": "OUR_NUMBER"
		}
	}
}
